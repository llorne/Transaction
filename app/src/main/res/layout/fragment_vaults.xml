<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_200"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/vault_onclick_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50sp"
        app:cardBackgroundColor="@color/white_200"
        app:cardCornerRadius="8sp"
        android:visibility="gone"
        app:cardElevation="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20sp">

            <TextView
                android:id="@+id/vault_name_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/vault_type_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vault_name_dialog" />

            <TextView
                android:id="@+id/vault_balance_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="start"
                android:textColor="@color/blue_800"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vault_type_dialog" />

            <ImageView
                android:id="@+id/vault_currency_dialog"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/ruble"
                app:layout_constraintStart_toEndOf="@+id/vault_balance_dialog"
                app:layout_constraintTop_toBottomOf="@+id/vault_type_dialog"
                app:tint="@color/blue_800" />

            <TextView
                android:id="@+id/vault_status_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vault_balance_dialog" />

            <ImageView
                android:id="@+id/vault_status_img_dialog"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                android:src="@drawable/checkmark"
                app:layout_constraintStart_toEndOf="@+id/vault_status_dialog"
                app:layout_constraintTop_toBottomOf="@+id/vault_balance_dialog" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vault_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20sp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Суммарно: "
                android:textColor="@color/blue_800"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/vault_rubbles_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_800"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginStart="5sp"
                android:background="@color/white_200"
                android:src="@drawable/ruble"
                app:tint="@color/blue_800" />

            <TextView
                android:id="@+id/vault_dollars_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:textColor="@color/blue_800"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginStart="5sp"
                android:background="@color/white_200"
                android:src="@drawable/dollar"
                app:tint="@color/blue_800" />

            <TextView
                android:id="@+id/vault_euros_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:textColor="@color/blue_800"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginStart="5sp"
                android:background="@color/white_200"
                android:src="@drawable/euro"
                app:tint="@color/blue_800" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            style="@style/ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/vaults_select"
            android:padding="20sp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_new_vault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="100sp"
            android:backgroundTint="@color/white_200"
            android:src="@drawable/add_icon"
            app:borderWidth="0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@color/white_200" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

